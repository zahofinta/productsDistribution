@model ProductsDistribution.Models.InputModels.AnnouncementInfo


<head>
    <link href="@Url.Content("~/Content/Themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />

</head>

<style>
    .custom-combobox {
        position: relative;
        display: inline-block;
    }

    .custom-combobox-toggle {
        position: absolute;
        top: 0;
        bottom: 0;
        margin-left: -1px;
        padding: 0;
        /* support: IE7 */
        *height: 1.7em;
        *top: 0.1em;
    }

    .custom-combobox-input {
        margin: 0;
        padding: 0.3em;
    }
</style>







@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    


    <div class="form-horizontal" id="announcement">
        <h4>AnnouncementInfo</h4>
        <hr />


        <div class="announcementForm">
            
          

            <div class="form-group">
                @Html.LabelFor(model => model.firstProductInfo.producerNames, "Производител :", htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10 producersClass" id="producers">


                    @Html.DropDownListFor(m => m.firstProductInfo.selected_producerName, Model.firstProductInfo.producerNames, "", new { @id = "combobox", @class = "ddlProducer" })


                    @Html.ValidationMessageFor(model => model.firstProductInfo.selected_producerName, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.firstProductInfo.productNames, "Продукт :", htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10 productsClass" id="products">


                    @Html.DropDownListFor(m => m.firstProductInfo.selected_productName, Model.firstProductInfo.productNames, "", new { @id = "productCombobox", @class = "ddl ddlProduct" })


                    @Html.ValidationMessageFor(model => model.firstProductInfo.selected_productName, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.firstProductInfo.quantity, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.firstProductInfo.quantity, new { htmlAttributes = new { @class = "form-control", @id = "quantity" } })
                    @Html.ValidationMessageFor(model => model.firstProductInfo.quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.firstProductInfo.price, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.firstProductInfo.price, new { htmlAttributes = new { @class = "form-control" , @id="price" } })
                    @Html.ValidationMessageFor(model => model.firstProductInfo.price, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        @*<div class="form-group">

                @Html.HiddenFor(m => Model.isDeleted)
            <a class="delete-announcement"><span>Изтрий</span></a>

            </div>*@



